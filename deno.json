{
	"name": "@spatial-indexing/research",
	"exports": {
		"./conformance": "./src/conformance/mod.ts"
	},
	"imports": {
		"@types/google-apps-script": "npm:@types/google-apps-script@^1.0.0",
		"@std/assert": "jsr:@std/assert@1"
	},
	"tasks": {
		"test": "deno test test/",
		"test:watch": "deno test --watch test/",
		"test:linearscan": "deno test test/linearscan.test.ts",
		"test:morton": "deno test test/mortonlinearscan.test.ts",
		"test:compact": "deno test test/compactlinearscan.test.ts",
		"test:optimized": "deno test test/optimizedlinearscan.test.ts",
		"test:arraybuffer": "deno test test/arraybufferlinearscan.test.ts",
		"test:arraybufferrtree": "deno test test/arraybufferrtree.test.ts",
		"test:rtree": "deno test test/rtree.test.ts",
		"test:compactrtree": "deno test test/compactrtree.test.ts",
		"test:integration": "deno test test/integration.test.ts",
		"test:adversarial": "deno test test/adversarial.test.ts",
		"bench": "deno bench --allow-read=src,archive benchmarks/performance.ts",
		"bench:archived": "deno bench --allow-read=src,archive benchmarks/performance.ts -- --include-archived",
		"bench:update": "deno run --allow-read --allow-write --allow-run scripts/update-benchmarks.ts",
		"bench:analyze": "deno run --allow-read --allow-write --allow-run scripts/analyze-benchmarks.ts",
		"sync-docs": "deno run --allow-read --allow-write --allow-run scripts/sync-docs.ts",
		"archive:impl": "deno run --allow-read --allow-write scripts/archive-impl.ts",
		"unarchive:impl": "deno run --allow-read --allow-write scripts/unarchive-impl.ts",
		"lint": "deno lint",
		"fmt": "deno fmt",
		"check": "deno check"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-unused-vars"]
		}
	},
	"compilerOptions": {
		"lib": ["deno.window"],
		"strict": true
	}
}
