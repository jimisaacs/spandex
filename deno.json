{
	"name": "@spatial-indexing/research",
	"exports": {
		"./conformance": "./src/conformance/mod.ts"
	},
	"imports": {
		"@types/google-apps-script": "npm:@types/google-apps-script@^1.0.0",
		"@std/assert": "jsr:@std/assert@1"
	},
	"tasks": {
		"test": "deno test -A test/",
		"test:watch": "deno test -A --watch test/",
		"test:morton": "deno test -A test/mortonlinearscan.test.ts",
		"test:rstartree": "deno test -A test/rstartree.test.ts",
		"test:integration": "deno test -A test/integration.test.ts",
		"test:adversarial": "deno test -A test/adversarial.test.ts",
		"test:adapters": "deno test -A test/adapters.test.ts",
		"bench": "deno bench -A benchmarks/performance.ts",
		"bench:update": "deno run -A scripts/update-benchmarks.ts",
		"bench:analyze": "deno run -A scripts/analyze-benchmarks.ts",
		"sync-docs": "deno run -A scripts/sync-docs.ts",
		"archive:impl": "deno run -A scripts/archive-impl.ts",
		"unarchive:impl": "deno run -A scripts/unarchive-impl.ts",
		"hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
		"hooks:pre-commit": "deno task fmt --check && deno task lint && deno task check && deno task test",
		"lint": "deno lint",
		"fmt": "deno fmt",
		"check": "deno check"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-unused-vars"]
		}
	},
	"compilerOptions": {
		"lib": ["deno.window"],
		"strict": true
	}
}
