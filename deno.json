{
	"workspace": [
		"./packages/@jim/spandex",
		"./packages/@jim/spandex-ascii",
		"./packages/@jim/spandex-html",
		"./packages/@local/snapmark",
		"./packages/@local/spandex-testing",
		"./packages/@local/spandex-telemetry",
		"./site"
	],
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/path": "jsr:@std/path@1"
	},
	"exclude": [".temp/", "_site/"],
	"tasks": {
		"test": "deno test -A",
		"test:watch": "deno test -A --watch",
		"test:spandex": "deno test -A packages/@jim/spandex/",
		"test:spandex-testing": "deno test -A packages/@local/spandex-testing/",
		"test:spandex-telemetry": "deno test -A packages/@local/spandex-telemetry/",
		"test:adversarial": "deno test -A packages/@jim/spandex/test/adversarial.test.ts",
		"test:morton": "deno test -A packages/@jim/spandex/test/index/mortonlinearscan/",
		"test:rstartree": "deno test -A packages/@jim/spandex/test/index/rstartree/",
		"bench": "deno bench -A benchmarks/performance.ts",
		"bench:update": "deno run -A scripts/update-benchmarks.ts",
		"bench:analyze": "deno run -A scripts/analyze-benchmarks.ts",
		"bench:archived": "deno bench -A benchmarks/performance.ts -- --include-archived",
		"sync-docs": "deno run -A scripts/sync-docs.ts",
		"archive:impl": "deno run -A scripts/archive-impl.ts",
		"unarchive:impl": "deno run -A scripts/unarchive-impl.ts",
		"hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
		"hooks:pre-commit": "deno task fmt --check && deno task lint && deno task check && deno task test",
		"fixtures:clear": "find . -path '*/fixtures/*.md' -type f -delete && echo 'Cleared all fixture files'",
		"site:build": "cd site && deno task build",
		"site:serve": "cd site && deno task serve",
		"lint": "deno lint",
		"fmt": "deno fmt",
		"check": "deno check"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": ["no-unused-vars"]
		}
	},
	"compilerOptions": {
		"lib": ["deno.window"],
		"strict": true,
		"erasableSyntaxOnly": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"noPropertyAccessFromIndexSignature": true,
		"verbatimModuleSyntax": true
	}
}
